generator client {
  provider = "prisma-client-js"
  output   = "./prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id
  money      Decimal  @default(0.0) @db.Decimal(12, 2)
  bank       Decimal  @default(50.0) @db.Decimal(12, 2)
  xp         Int      @default(0)
  company    Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)
  companyId  Int?
  logs       Log[]
  cooldowns  Cooldown[]
}

model Log {
  id        Int      @id @default(autoincrement())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  message   String
  timestamp DateTime @default(now())
  level     Int      @default(0)
  type      String   @default("info")
  name      String   @default("action")
}

model Cooldown {
  id        Int      @id @default(autoincrement())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  name      String
  timestamp DateTime @default(now())
  willEndIn DateTime
}

model Company {
  id           Int     @id @default(autoincrement())
  name         String
  description  String?
  difficulty   Int     @default(1)
  experience   Int     @default(0)
  wage         Decimal @default(100.0) @db.Decimal(12, 2)
  expectations Json
  workers      User[]
}
